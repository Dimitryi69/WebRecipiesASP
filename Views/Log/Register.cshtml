@model CourseWeb.Models.DBModels.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Styles/LogStyle.css" />
    <style type="text/css">
        .error {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
    @using (Html.BeginForm("Register", "Log", FormMethod.Post, new { @autocomplete = "off" }))
    {
        <table border="0" cellpadding="0" cellspacing="0" align="center">
            <tr>
                <th colspan="3">
                    Looks like you are the new one here!
                </th>
            </tr>
            <tr>
                <td>
                    Username
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Username, new { @class = "input_class", @autocomplete = "off", @placeholder = "Example: Satan666" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td>
                    Password
                </td>
                <td>
                    @Html.PasswordFor(m => m.Password, new { @class = "input_class", @placeholder = "Example: D342nj3m1A21" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <input type="submit" value="Register" class="submitButton" />
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    @Html.ActionLink("I already have an account", "Index")
                </td>
            </tr>
        </table>
    }
        </div>
    @if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                alert("@ViewBag.Message")
            });
        </script>
    }
</body>
</html>
